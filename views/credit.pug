doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Credit Sales Form
  link(rel='stylesheet' href='/css/credit.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
body
   .video-container(style='height: 600px;')
      video(autoplay muted loop)
        source(src='/images/202407310754 (1).mp4' type='video/mp4')
header
      img(style='width: 40px; height: 40px; border-radius: 50%;' src='/images/download (3).png')
      .agent-profile
        span.agent-name Welcome, Sales Agent
        a(href='/') Logout
aside.sidebar
      nav
        ul
          li
            a#showSalesFormBtn(href='/userSale')
              i.fas.fa-shopping-cart(style='padding-right:15px;')
              | Record Sales
          li
            a#showCreditFormBtn(href='#')
              i.fas.fa-credit-card(style='padding-right:15px;')
              | Credit Sales
br
br
br   
.form-container
  .form-header
    h1 Credit Sales Form
  form(name='salesForm', onsubmit='return validateForm()', action=`/debit/${produce ? procurement._id : ''}` method='POST')
    .form-row
      .form-column
        label(for='buyerName') Buyer Name:
        input#buyerName(type='text' name='buyerName')
        label(for='nationalId') National ID (NIN):
        input#nationalId(type='text' name='nationalid')
        label(for='location') Location:
        input#location(type='text' name='location')
        label(for='contacts') Contacts:
        input#contacts(type='text' name='contact')
        label(for='amountDue') Amount Due (UGX):
        input#amountDue(type='text' name='amountDue')
        label(for='salesagent') Sales Agent Name:
        input#salesAgent(type='text' name='salesAgent')
      .form-column
        label(for='dueDate') Due Date:
        input#dueDate(type='date' name='dueDate')
        label(for='branch') Branch Name:
        select#branch(name='branch')
          option(value='') Select Branch
          option(value='Maganjo') Maganjo
          option(value='Matugga') Matugga
        label(for='produceName') Produce Name:
        select#produceName(type='text' name='produceName')
          option(value='') Select Produce
          option(value='Rice') Rice
          option(value='beans') beans
          option(value='Maize') grain maize
          option(value='cowpeas') Cowpeas
          option(value='soyabeans') Soyabeans
          option(value='gnut') G-nuts
        label(for='produceType') Type of Produce:
        input#produceType(type='text' name='produceType')
        label(for='tonnage') Tonnage:
        input#tonnage(type='number' name='tonnage')
        label(for='dispatchDate') Date of Dispatch:
        input#dispatchDate(type='date' name='dispatchDate')
    .submit
      button(type='submit') Submit
 
  #result
 
script(src='/js/credit.js')