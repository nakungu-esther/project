main


  // Procurement Form Section
  section#procurementFormSection.dashboard-section
    h2 Record Produce Procurement
    form#procurementForm(action='/addprocurement', method='POST')
      label(for='produceName') Name of Produce:
      input#produceName(type='text' name='produceName' )
      label(for='produceType') Type of Produce:
      select#produceType(name='produceType')
        option(value='') select
        option(value="grain") grains
        option(value='cereals') Cereals
        option(value='legume') Legumes
      label(for='procureDate') Date:
      input#procureDate(type='date' name='procureDate')
      label(for='procureTime') Time:
      input#procureTime(type='time' name='procureTime')
      label(for='tonnage') Tonnage (in kg):
      input#tonnage(type='number' name='tonnage')
      label(for='cost') Cost (in UgX):
      input#cost(type='number' name='cost')
      label(for='dealerName') Dealer Name:
      select#dealerName(name='dealerName')
        option(value='')
        option(value="matuga farm") Matuga farm
        option(value='Maganjo farm') Maganjo farm
        option(value='Individual') Individual
        option(value='Other companies') Other companies
      label(for='branchName') Branch Name:
      select#branchName(name='branchName')
        option(value='') Select
        option(value='Maganjo') Maganjo
        option(value='Matuga') Matuga
      label(for='contact') Contact:
      input#contact(type='tel' name='contact')
      label(for='sellingPrice') Price to be Sold At:
      input#sellingPrice(type='number' name='sellingPrice')
      button(type='submit') Submit
 
