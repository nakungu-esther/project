doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Manager Page - Happy Hoe Grocery Ltd.
  link(rel='stylesheet' href='/css/manager.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
body
  .video-container(style='height: 600px;position:relative;')
    video(autoplay muted loop)
      source(src='/images/202407310754 (1).mp4' type='video/mp4')
  header
    img(src='/images/download (3).png' style='width: 40px; height: 40px; border-radius: 50%;')
    .manager-profile
      span.manager-name Welcome, Manager
  // <a href="/">Logout</a>
main
  aside.sidebar
    nav
      ul
        li
          a(href='/overView')
            i.fas.fa-clipboard-list(style='padding-right: 9px;')
            |                             Overview
        li
          a(href='#')
            i.fas.fa-file-archive(style='padding-right: 9px;')
            |                             Procurements
        li
          a(href='/reports')
            i.fas.fa-chart-bar(style='padding-right: 9px;')
            |                              Reports
        li
          a(href='/cropProcurementList')
            i.fas.fa-print(style='padding-right: 9px;')
            |                             Product List
  // Procurement Form Section
  section#procurementFormSection.dashboard-section
    h2 Record Produce Procurement
    form#procurementForm(action='/addProcurement' method='POST')
      label(for='produceName') Name of Produce:
      select#produceName(name='produceName')
        option(value='') Select
        option(value='Beans') Beans
        option(value='Rice') Rice
        option(value='Maize') Maize
        option(value='Cowpeas') Cowpeas
        option(value='Soyapeas') Soyapeas
        option(value='Groundnut') Groundnut
      #produceNameError.error-message
      label(for='produceType') Type of Produce:
      select#produceType(name='produceType')
        option(value='') Select
        option(value='Grain') Grains
        option(value='Cereals') Cereals
        option(value='Legume') Legumes
      #produceTypeError.error-message
      label(for='procureDate') Date :
      input#procureDate(type='date' name='procureDate')
      #procureDateError.error-message
      label(for='procureTime') Time:
      input#procureTime(type='time' name='procureTime')
      #procureTimeError.error-message
      label(for='tonnage') Tonnage (in kg):
      input#tonnage(type='number' name='tonnage')
      #tonnageError.error-message
      label(for='cost') Cost (in UgX):
      input#cost(type='number' name='cost')
      #costError.error-message
      label(for='dealerName') Dealer:
      select#dealerName(name='dealerName')
        option(value='')
        option(value='Matuga farm') Matuga Farm
        option(value='Maganjo farm') Maganjo Farm
        option(value='Individual') Individual
        option(value='Other companies') Other Companies
      #dealerNameError.error-message
      label(for='branchname') Branch:
      select#branchName(name='branchName')
        option(value='') Select
        option(value='Maganjo') Maganjo
        option(value='Matuga') Matuga
      #branchNameError.error-message
      label(for='contact') Contact:
      input#contact(type='tel' name='contact')
      #contactError.error-message
      label(for='sellingprice') Sold Price :
      input#sellingPrice(type='number' name='sellingPrice')
      #sellingPriceError.error-message
      #successMessage.success-message
      button(type='submit') Submit
footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 0%;')
  div(style='margin-bottom: 10px;')
