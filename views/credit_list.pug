doctype html
html
  head
    title Credit List
    link(rel='stylesheet', href='/css/list.css')
  body
    header
      img(src='/images/download (3).png', style='width: 40px; height: 40px; border-radius: 50%;')
      a.btn-back(href='javascript:history.back()', style='margin-right: 50px;') Back
    br
    br 
    .container
      h2.text-center.mt-5.mb-4 Credit List
      table.table.table-striped
        thead
          tr
            th(scope='col') Buyer's Name
            th(scope='col') NIN
            th(scope='col') Location
            th(scope='col') Contact
            th(scope='col') Amount Due
            th(scope='col') Sales Agent Name
            th(scope='col') Branch Name
            th(scope='col') Produce Name
            th(scope='col') Produce Type 
            th(scope='col') Tonnage
            th(scope='col') Actions
        tbody
          if credits.length
            each credit in credits
              tr
                td #{credit.buyerName}
                td #{credit.nationalid}
                td #{credit.location}
                td #{credit.contact}
                td #{credit.amountDue}
                td #{credit.salesAgent}
                td #{credit.branch}
                td #{credit.produceName}
                td #{credit.produceType}
                td #{credit.tonnage}
                td
                  a.btn.btn-primary.btn-sm(href='/updateCredit/' +credit._id) Update
                td
                  form(method="POST" action='/deleteCredit')
                    input(type="hidden", name="id", value=credit._id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete
                td 
                  a.btn.btn-secondary.btn-sm(href='/receipt/'+credit._id) Receipt    
          else
            tr
              td(colspan="11", class="text-center") No debts yet :(
    footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 20px;')
      div(style='margin-bottom: 10px;')
