doctype html
html
  head
    title Sales List
    link(rel='stylesheet', href='/css/list.css')
  body
    header
      img(src='/images/download (3).png', style='width: 40px; height: 40px; border-radius: 50%;')
    .container
      h2.text-center.mt-5.mb-4 Sales List
      table.table.table-striped
        thead
          tr
            th(scope='col') Produce Name
            th(scope='col') Tonnage Sold (kg)
            th(scope='col') Amount Paid
            th(scope='col') Buyer's Name
            th(scope='col') Date of Sale
            th(scope='col') Sales Agent
            th(scope='col') Action
            th
            th
        tbody
          if sales.length
            each sale in sales
              tr
                td #{sale.producename} 
                td #{sale.tonnage} 
                td #{sale.amountPaid} 
                td #{sale.buyerName} 
                td #{moment(sale.dateTime).format('DD-MM-YYYY')} 
                td #{sale.salesAgent.username} 
                td
                  a.btn.btn-primary.btn-sm(href='/updatesales/' + sale._id) View
                td
                  form(method='post', action='/deletesale', style='display:inline')
                    input(type='hidden', name='id', value=sale._id)
                    button.btn.btn-danger.btn-sm(type='submit') Delete
                td
                  a.btn.btn-primary.btn-sm(href='/sales_receipt/' + sale._id) Receipt
          else
            p No sales yet :(
    footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 20px;')
      div(style='margin-bottom: 10px;')
