doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='/css/salesL.css')
  body
    header
      img(src='/images/download (3).png', style='width: 40px; height: 40px; border-radius: 50%;')
      a.btn.back(href='javascript:history.back()', style='margin-right: 50px;') Back
    .container
      h2.text-center.mt-5.mb-4 Sales List
      h4.text-center.mt-5.mb-4 Total Payment: #{Totalpay.total}
      if sales.length
        table.table.table-striped
          thead
            tr
              th(scope='col') Produce Name
              th(scope='col') Tonnage Sold (kg)
              th(scope='col') Amount Paid
              th(scope='col') Buyer's Name
              th(scope='col') Date and Time
             
              th(scope='col') Total Payment
              th(scope='col') Action
              th
              th
          tbody
            each sale in sales
              tr
                td #{sale.producename} 
                td #{sale.tonnage} 
                td #{sale.amountPaid} 
                td #{sale.buyerName} 
                td #{moment(sale.dateTime).format('DD-MM-YYYY')} 
               
                td #{sale.Totalpayment}
                td
                  a.btn.btn-primary.btn-sm(href='/updateSales/' + sale._id) View
                td
                  form(method='POST', action='/deleteSales', style='display:inline')
                    input(type='hidden', name='id', value=sale._id)
                    button.btn.btn-danger.btn-sm(type='submit') Delete
                td
                  a.btn.btn-primary.btn-sm(href='/receipt2/' + sale._id) Receipt
      else
        p No sales yet :(
    footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 20px;')
      div(style='margin-bottom: 10px;')
