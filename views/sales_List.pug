doctype html
html
  head
    title sale List
    link(rel='stylesheet', href='/css/list.css')
  body
    header
      img(src='/images/download (3).png', style='width: 40px; height: 40px; border-radius: 50%;')
    .container
      h2.text-center.mt-5.mb-4 Sales List
      table.table.table-striped
        thead
          tr
            th(scope='col') Produce Name
            th(scope='col') Tonnage Sold (kg)
            th(scope='col') Amount Paid
            th(scope='col') Buyer's Name 
            th(scope='col') Date of Sale 
            th(scope='col') Sales Agent 
            th(scope='col') Action 
            th 
        tbody
          if sales.length
            each sale in sales
              tr
                td #{sale.produceName.produceName}
                td #{sale.saleTonnage}
                td #{sale.amount}
                td #{sale.buyername}
                td #{moment(sale.saledate. 'YYYY-MM-DO'). format('DO-MM-YYYY')}
                td #{sale.salesAgent.firstName+''+sale.salesAgent.lastName}
                td
                  a.btn.btn-primary.btn-sm(href='/updatesale/' +sale._id) Update
                td
                  form(method="post" action='/deletesale')
                    input(type="hidden", placeholder="", name="id", value=sale.id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete
                td 
                  a.btn.btn-primary.btn-sm(href='/sales_reciept/' +sale._id) Reciept
          else
              p No sale yet :(
    footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 20px;')
      div(style='margin-bottom: 10px;')
