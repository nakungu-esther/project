doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Happy Hoe Grocery - Login
    link(rel='stylesheet' href='assets/bootstrap5/css/bootstrap.css')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/boxicons/2.1.1/css/boxicons.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/you.css')
  body
    .video-container(style='height: 600px;')
      video(autoplay muted loop)
        source(src='/images/202407301926 (3).mp4' type='video/mp4')
    header
      p
        | Go back to 
        a(href='/') Home Page
    main.form-section.content
      h2 Login
      form#login-form(action="/login" method="POST")
        label(for='email') Email:
        input#email(type='email' name='email' required)
        label(for='password') Password:
        input#password(type='password' name='password' required)
        input.btn.btn-primary.custom-button(type='submit' value='Login')
        p
          | Don't have an account? 
          a(href="/addUser") Signup here
    footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center;')
      div(style='margin-bottom: 10px;')
