doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Edit Produce Entry
    link(rel='stylesheet' href='/css/update.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
  body
    .video-container(style='height: 600px; position:relative;')
      video(autoplay muted loop)
        source(src='/images/202407310754 (1).mp4' type='video/mp4')
    header
      img(src='/images/download (3).png' style='width: 40px; height: 40px; border-radius: 50%;')
      .manager-profile
        span.manager-name Welcome, Manager
    main
      aside.sidebar
        nav
          ul
            li
              a(href='/overView')
                i.fas.fa-clipboard-list(style='padding-right: 9px;')
                | Overview
            li
              a(href='/addProcurement')
                i.fas.fa-file-archive(style='padding-right: 9px;')
                | Procurements
            li
              a(href='#')
                i.fas.fa-chart-bar(style='padding-right: 9px;')
                | Reports
      section#procurementFormSection.dashboard-section
        h2 Edit Procurement Entry
        form#procurementForm(action="/UpdateProcurement?id="+procurement._id method="POST")
          .form-row
            .form-group
              label(for='producename') Name of Produce:
              select#branch-name(name='producename')
                option(value='Maize ' selected=producename === 'maize') Maize 
                option(value='Rice' selected=producename === 'Rice') Rice
                option(value='Beans' selected=producename === ' Beans') Beans
                option(value='Soyabeans' selected=producename === 'Soyabeans') Soyabeans
                option(value='Cowpeas' selected=producename === 'Cowpeas') Cowpeas
                option(value='Gunts' selected=producename === 'G.nuts') G.nuts

            .form-group
              label(for='producetype') Type of Produce:
              select#branch-name(name='producetype')
                option(value='Cereals' selected=producetype === 'cereals') Cereals
                option(value='Grains' selected=producetype === 'grains') Grains
                option(value='Iegumes' selected=producetype === 'legumes') Legumes
          .form-row
            .form-group
              label(for='entrydate') Date:
              input#entry-date(type='date' name='procuredate' )
            .form-group
              label(for='entrytime') Time:
              input#entry-time(type='time' name='procuretime')
          .form-row
            .form-group
              label(for='tonnage') Tonnage (in kg):
              input#tonnage(type='number' name='tonnage')
            .form-group
              label(for='cost') Cost (in Ugx):
              input#cost(type='number' name='cost')
          .form-row
            .form-group
              label(for='dealername') Dealer:
              select#branch-name(name='dealername')
                option(value='Matuga farm ' selected=dealerName === 'Matuga farm') Matuga farm
                option(value='Maganjo farm' selected=dealerName === 'Maganjo farm') Maganjo farm
                option(value='Individual' selected=dealerName === 'Individual') Individual
                option(value='Other companies' selected=dealerName === 'Other companies') Other companies
            .form-group
              label(for='branchname') Branch:
              select#branch-name(name='branchname')
                option(value='Maganjo' selected=branchName === 'Maganjo') Maganjo
                option(value='Matugga' selected=branchName === 'Matugga') Matugga
          .form-row
            .form-group
              label(for='contact') Contact:
              input#contact(type='tel' name='contact')
            .form-group
              label(for='selling-price') Sold Price:
              input#selling-price(type='number' name='sellingPrice')
             
          button(type='submit') Update
    footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 0%;')
      div(style='margin-bottom: 10px;')
