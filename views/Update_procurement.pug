doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Edit Produce Entry
  link(rel='stylesheet' href='/css/form.css')
body
    .video-container(style='height: 600px;position:relative;')
      video(autoplay muted loop)
        source(src='/images/202407310754 (1).mp4' type='video/mp4')
    header
      img(src='/images/download (3).png' style='width: 40px; height: 40px; border-radius: 50%;')
      .manager-profile
        span.manager-name Welcome, Manager
  // <a href="/">Logout</a>
main.content
  section.record-entry
    h1 Edit Procurement Entry
    form#produce-entry-form(action="/UpdateProcurement?id"+procurement._id method="POST")  
      .form-group
        label(for='produce-name') Produce Name:
        input#produce-name(type='text' name='produceName' value='Current Produce Name')
      .form-group
        label(for='produce-type') Type of Produce:
        input#produce-type(type='text' name='produceType' value='Current Produce Type')
      .form-group
        label(for='entry-date') Date:
        input#entry-date(type='date' name='procureDate' value='2024-08-19')
      .form-group
        label(for='entry-time') Time:
        input#entry-time(type='time' name='procureTime' value='14:00')
      .form-group
        label(for='tonnage') Tonnage (kg):
        input#tonnage(type='number' name='tonnage' value='1000')
      .form-group
        label(for='cost') Cost (Ugx):
        input#cost(type='number' name='cost' value='5000000')
      .form-group
        label(for='dealer-name') Dealer Name:
        select#branch-name(name='dealerName')
          option(value='Matuga farm ' selected = dealerName === 'Matuga farm') Matuga farm
          option(value='Maganjo farm' selected = dealerName === 'Maganjo farm') Maganjo farm
          option(value='Individual' selected = dealerName === 'Individual') Individual
          option(value='Other companies' selected = dealerName === 'Other companies') Other companies
      .form-group
        label(for='branch-name') Branch Name:
        select#branch-name(name='branchName')
          option(value='Maganjo' selected = branchName === 'Maganjo') Maganjo
          option(value='Matugga' selected = branchName === 'Matugga') Matugga
      .form-group
        label(for='contact') Contact:
        input#contact(type='tel' name='contact' value='Current Contact' )
      .form-group
        label(for='selling-price') Selling Price (Ugx):
        input#selling-price(type='number' name='sellingPrice' value='6000000')
      button(type='submit') Update
footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 0%;')
