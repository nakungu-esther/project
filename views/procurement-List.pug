doctype html
html
  head
    title Procurement List
    link(rel='stylesheet', href='/css/list.css')
  body
    header
      img(src='/images/download (3).png', style='width: 40px; height: 40px; border-radius: 50%;')
      a.btn.back(href='javascript:history.back()', style='margin-right: 50px') Back
    .container
      h2.text-center.mt-5.mb-4 All Procurement

      //- Column layout for Total Procurement using Bootstrap
      .col
        .col-md-4
          h3 Total Procurement Maize: #{maizeTonnage.totalQuatity}
        .col-md-4
          h3 Total Procurement Beans: #{beanTonnage.totalQuatity}
        .col-md-4
          h3 Total Procurement Rice: #{riceTonnage.totalQuatity}
      .col
        .col-md-4
          h3 Total Procurement Cowpeas: #{cowpeasTonnage.totalQuatity}
        .col-md-4
          h3 Total Procurement Soyapeas: #{soyapeasTonnage.totalQuatity}
        .col-md-4
          h3 Total Procurement Groundnut: #{groundnutTonnage.totalQuatity}

      table.table.table-striped
        thead
          tr
            th(scope='col') Produce Name
            th(scope='col') Type of Produce
            th(scope='col') Procure Time
            th(scope='col') Tonnage
            th(scope='col') Cost
            th(scope='col') Dealer Name
            th(scope='col') Branch Name
            th(scope='col') Contact
            th(scope='col') Selling Price
            th(scope='col') Action
            th 
            th
        tbody
          if procurements.length
            each procurement in procurements
              tr
                td #{procurement.produceName}
                td #{procurement.produceType}
                td #{procurement.procureTime}
                td #{procurement.tonnage}
                td #{procurement.cost}
                td #{procurement.dealerName}
                td #{procurement.branchName}
                td #{procurement.contact}
                td #{procurement.sellingPrice}
                td
                td
                  a.btn.btn-primary.btn-sm(href='/updateProcurement/' + procurement._id) View
                  form(method="POST", action='/deleteprocurement')
                    input(type="hidden", name="id", value=procurement._id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete
          else
            tr
              td(colspan="10", class="text-center") No produce yet :(

    footer(style='background-color: #2c3e50; color: #fff; padding: 20px; text-align: center; margin-top: 20px;')
      div(style='margin-bottom: 10px;')
